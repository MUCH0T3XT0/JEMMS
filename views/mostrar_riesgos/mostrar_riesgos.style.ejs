<style>
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

@property --progress{
    syntax: '<number>';
    initial-value: 0;
    inherits: false;

}

body {
    background-image: url('FONDO_web_N-03.png');
    background-size: cover; /* Cubrir todo el fondo */
    background-position: center bottom 0.15rem; /* Centrar la imagen en la página */
    background-attachment: fixed;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-style: normal;
    display: grid;
}

h1 {
    text-align: center;
    min-height: 20vh;
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30px;
}

.circular_progress {
    position: relative;
    width: 200px;
    height: 200px;
    background: conic-gradient(
        var(--clr) calc(var(--progress) * 3.6deg), #e4eeff 0deg);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    animation: progressAnim 2s forwards;
}

.circular_progress::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150px;
    height: 150px;
    background-color: #ffffff;
    border-radius: 50%;
    transform: translate(-50%, -50%);

}

.circular_progress span{
    font-size: 2rem;
    color: #4e80d7;
    z-index: 1;
}

.progress_label {
    font-size: 1.5rem;
    z-index: 1;
}

@keyframes progressAnim {
    0%{
        --progress: 0;
    }
    100%{
        --progress: var(--value);
    }
}

#promedio {
text-align: center;
font-size: 4rem;
color: orange;
}

h2 {
    text-align: center;
    min-height: 20vh;
}

.table-responsive{
    border: 3px solid #000000;
}

.align-middle{
    border: 3px solid #000000;
}

.riesgo-alto {
    color: rgb(211, 32, 32);
}

.riesgo-medio {
    color: orange;
}

.riesgo-bajo {
    color: green;
}
</style>