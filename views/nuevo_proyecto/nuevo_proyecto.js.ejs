<script>
    function toggleContentRiesgos() {
            var contenido = document.getElementById("riesgos");
            var boton = document.getElementById("boton_riesgos");
            if (contenido.style.display === "none") {
                boton.textContent = "Ocultar riesgos";
                boton.style.backgroundColor = "red";
                contenido.style.display = "block";
            } else {
                boton.textContent = "Añadir riesgos";
                boton.style.backgroundColor = "rgb(49,107,243)";
                contenido.style.display = "none";
            }
    }

    function toggleContentUsuarios() {
        var contenido = document.getElementById("usuarios");
        var boton = document.getElementById("boton_lider");
        if (contenido.style.display === "none") {
            boton.textContent = "Ocultar lider";
            boton.style.backgroundColor = "red";
            contenido.style.display = "block";
        } else {
            boton.textContent = "Añadir lider";
            boton.style.backgroundColor = "rgb(49,107,243)";
            contenido.style.display = "none";
        }
    }

    var textarea = document.getElementById('descripcion');
    var contadorCaracteres = document.getElementById('contadorCaracteres');
    textarea.addEventListener('input', function() {
        contadorCaracteres.textContent = textarea.value.length + '/500';
        if (textarea.value.length > 500) {
            textarea.value = textarea.value.slice(0, 500);
            contadorCaracteres.textContent = '500/500';
        }
    });
</script>