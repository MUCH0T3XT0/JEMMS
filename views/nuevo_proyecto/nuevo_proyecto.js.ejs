<script>
    function toggleContentRiesgos() {
            var contenido = document.getElementById("riesgos");
            var boton = document.getElementById("boton_riesgos");
            if (contenido.style.display === "none") {
                boton.textContent = "Ocultar riesgos";
                boton.style.backgroundColor = "red";
                contenido.style.display = "block";
            } else {
                boton.textContent = "Añadir riesgos";
                boton.style.backgroundColor = "rgb(49,107,243)";
                contenido.style.display = "none";
            }
    }
</script>

