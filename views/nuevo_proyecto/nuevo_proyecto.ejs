                <br>
                <h3>Crear Nuevo</h3>
                <h3>Proyecto</h3>
                <br>
            </div>
        </div>
    </div>
    <div class="container py-4">
        <form class=" row g-3" action="/proyecto/nuevo_proyecto" method="post">
            <div class="mb-3 row">
                <label for="inputNombre" class="col-sm-2 col-form-label">Nombre de proyecto</label>
                <div class="col-sm-10">
                  <input name = "nombre_proyecto" type=" text" class="form-control" id="inputNombre">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputCliente" class="col-sm-2 col-form-label">Nombre de empresa</label>
                <div class="col-sm-10">
                  <input name = "empresa" type=" text" class="form-control" id="inputCliente">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputCliente" class="col-sm-2 col-form-label">Departamento</label>
                <div class="col-sm-10">
                  <input name = "departamento" type=" text" class="form-control" id="inputCliente">
                </div>
            </div>
            <div class="mb-3 row">
                <label  for="inputStartDate" class="col-sm-2 col-form-label">Fecha de inicio</label>
                <div class="col-sm-10">
                  <input name = "f_creacion" type="text" class="form-control" id="inputStartDate" placeholder="Selecciona una fecha">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputEndDate" class="col-sm-2 col-form-label">Fecha de final</label>
                <div class="col-sm-10">
                  <input name = "f_fin" type="text" class="form-control" id="inputEndDate" placeholder="Selecciona una fecha">
                </div>
            </div>
            <div class="mb-3 row">
                <label  for="inputEncargado" class="col-sm-2 col-form-label">Encargado</label>
                <div class="col-sm-10">
                  <input name = "encargado" type="text" class="form-control" id="inputEncargado">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPresupuesto" class="col-sm-2 col-form-label">Presupuesto</label>
                <div class="col-sm-10">
                  <input name = "presupuesto" type="text" class="form-control" id="inputPresupuesto">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPresupuesto" class="col-sm-2 col-form-label">Descripcion de proyecto</label>
                <div class="col-sm-10">
                    <textarea name = "descripcion" class="form-control" id="inputProyecto" rows="4"></textarea>
                    <span id="contadorCaracteres">0/500</span>
                </div>
            </div>
            <div class="form-check">
                <div class="text-end">
                    <button type="submit" class="btn btn-primary mb-3">Enviar</button>
                </div>
            </div>
            
        </form>
    </div>

        <div class="text-center">
