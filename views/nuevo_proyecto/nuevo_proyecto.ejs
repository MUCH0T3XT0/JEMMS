        <form id="form_crear_riesgo" method="POST">
            <div class="container">
                <div class="table-responsive">
                    <table class="table align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Impacto</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Probabilidad</th>
                            <th scope="col">Estrategia</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="descripcion" name= "descripcion"placeholder="Aqui va descripcion del riesgo">
                                </div>
                            </td>
                            <td>
                                <select class="form-select" id= "impacto" name= "impacto" aria-label="Default select example">
                                    <option value="0" selected>Seleccionar</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                            </td>
                            <td>
                                <select class="form-select" id= "categoria" name= "categoria" aria-label="Default select example">
                                    <option value="Vacio" selected>Seleccionar</option>
                                    <option value="1">Alcance</option>
                                    <option value="2">Tiempo</option>
                                    <option value="3">Calidad</option>
                                    <option value="4">Costo</option>
                                    <option value="5">Recursos</option>
                                </select>
                            </td>
                            <td>
                                <select class="form-select" id= "probabilidad" name= "probabilidad" aria-label="Default select example">
                                    <option value="0" selected>Seleccionar</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                            </td>
                            <td>
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="estrategia" name="estrategia" placeholder="Aqui va descripcion de la estrategia">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    </table>
                </div>
            </div>
            <div class="container py-4">
                <button type="submit" action="/proyecto/nuevo_riesgo" class="btn btn-primary mb-3">Crear</button><!--Aqui debe ir en un futuro lun boton con id "submitButton" para usar Ajax-->
            </div>
        </form>
        <div class="row justify-content-center mt-6">
            <div class="col-md-4">
                <div class="text-center">
                    <h3>Añadir riesgo existente al proyecto</h3>
                </div>
            </div>
        </div>
        <form id="form_crear_riesgo" method="POST" action="/proyecto/nuevo_riesgo" >
            <div class="container">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th scope="col">Descripcion</th>
                                
                                <th scope="col">Categoria</th>
                                <th scope="col">Impacto</th>
                                <th scope="col">Probabilidad</th>
                                <th scope="col">Estrategia</th>
                                <th scope="col">Seleccionar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i = 0; i< riesgo.length ; i++){ %>
                            <tr>
                                <td><p name="descripcion" ><%= riesgo[i].description %></p></td>
                        
                               
    
                                <%if (riesgo[i].categoria == 1){%>
                                    <td><p style="color: #4ed0d7;">Alcance</p></td>
                                <%}else if (riesgo[i].categoria == 2){%>
                                    <td><p style="color: #4e80d7;">Tiempo</p></td>
                                <%}else if (riesgo[i].categoria == 3){%>
                                    <td><p style="color: orange;">Calidad</p></td>
                                <%}else if (riesgo[i].categoria == 4){%>
                                    <td><p style="color: #4ef73c;">Costo</p></td>
                                <%}else if (riesgo[i].categoria == 5){%>
                                    <td><p style="color: #ffdd1f;">Recursos</p></td>
                                <%}%>
                                <td><p><%= riesgo[i].impacto %></p></td>
                                <td><p><%= riesgo[i].probabilidad %></p></td>
                                <td><p><%= riesgo[i].estrategia_m %><p></td>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="<%= riesgo[i].id %>" value="<%= riesgo[i].id %>">
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container py-4">
                <button type="submit" class="btn btn-primary mb-3">Enviar</button>
            </div>
            </div>
    
            
    </form>    
</div>
